<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"

    android:padding="3dp">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:srcCompat="@mipmap/ic_list_image"
        android:id="@+id/list_item_imageView"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/list_item_imageView"
        android:id="@+id/list_item_nameTextView"
        android:textSize="19sp"
        android:padding="4dp"
        android:text="test" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_nameTextView"
        android:layout_toEndOf="@id/list_item_imageView"
        android:id="@+id/list_item_summaryTextView"
        android:padding="4dp"
        android:text="test" />


</RelativeLayout>
